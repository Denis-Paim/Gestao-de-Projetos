<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultasMarcadasActivity">

    <TextView
        android:id="@+id/txtNomeUsuarioConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="49dp"
        android:text="Nome"
        app:layout_constraintEnd_toEndOf="@+id/txtEspecialidadeConsulta"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNomeMedicoConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="1dp"
        android:text="Medico"
        app:layout_constraintEnd_toEndOf="@+id/txtHorarioConsulta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtDataConsulta"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeUsuarioConsulta" />

    <TextView
        android:id="@+id/txtEspecialidadeConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="60dp"
        android:text="Especialidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeMedicoConsulta" />

    <TextView
        android:id="@+id/txtDataConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="55dp"
        android:text="Data"
        app:layout_constraintEnd_toEndOf="@+id/txtEspecialidadeConsulta"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEspecialidadeConsulta" />

    <TextView
        android:id="@+id/txtHorarioConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Horario"
        app:layout_constraintStart_toStartOf="@+id/txtDataConsulta"
        app:layout_constraintTop_toBottomOf="@+id/txtDataConsulta" />

    <TextView
        android:id="@+id/txtSalaConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="1dp"
        android:text="Sala"
        app:layout_constraintEnd_toEndOf="@+id/txtDataConsulta"
        app:layout_constraintStart_toStartOf="@+id/txtHorarioConsulta"
        app:layout_constraintTop_toBottomOf="@+id/txtHorarioConsulta" />

    <TextView
        android:id="@+id/txtMarcarConsulta"
        android:layout_width="187dp"
        android:layout_height="42dp"
        android:text="Marcar Consulta"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>